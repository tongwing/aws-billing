HOST=0.0.0.0
PORT=3000
BROWSER=none
DANGEROUSLY_DISABLE_HOST_CHECK=true

# Base path for the application (e.g., "/aws-billing" for sub-path deployment)
# Examples:
# For root path: REACT_APP_BASE_PATH= (empty) or REACT_APP_BASE_PATH=/
# For sub-path: REACT_APP_BASE_PATH=/aws-billing
REACT_APP_BASE_PATH=

# PUBLIC_URL controls where static assets are served from
# This should match REACT_APP_BASE_PATH for consistency
# Examples:
# For root path: PUBLIC_URL= (empty) or PUBLIC_URL=/
# For sub-path: PUBLIC_URL=/aws-billing
PUBLIC_URL=